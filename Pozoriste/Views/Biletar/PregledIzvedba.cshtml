@model Tuple<List<Pozoriste.Models.Zona>,List<Pozoriste.Models.Rezervacija>,List<Pozoriste.Models.Sjediste>>



@{
    ViewBag.Title = "PregledIzvedba";
    
}

<br>

@{

    int kolona = @ViewBag.BrojSjedista / @ViewBag.BrojRedova;
}


<ul class="nav nav-tabs">
    <li class="active">

        <a href="#tab_1" data-toggle="tab">Rezervacija</a>
    </li>
    <li>
        <a href="#tab_2" data-toggle="tab">Prodaja</a>
    </li>

</ul>
<div class="tab-content">
    <div class="tab-pane fade in active" id="tab_1">
        <br>
        <form action="/Biletar/ObradaRezervacije" method="post">

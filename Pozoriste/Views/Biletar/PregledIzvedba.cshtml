                                            </label>
                                        </td>
                                    }
                                }
                                else
                                {
                                    <td>
                                        <label class="btn btn-primary" style="width:80px" disabled>
                                            <input type="checkbox" id="@(m * @ViewBag.BrojRedova + n)" value="@(m * @ViewBag.BrojRedova + n)" name="chk"> @(m * @ViewBag.BrojRedova + n)

                                        </label>
                                    </td>
                                }
                            }
                            else
                            {
                                if (ViewBag.listaSlobodnih.Contains((m * @ViewBag.BrojRedova + n)))
                                {
                                    if (!ViewBag.listaNeprodatih.Contains((m * @ViewBag.BrojRedova + n)))
                                    {
                                        <td>
                                            <label class="btn btn-primary" style="width:80px" disabled>
                                                <input type="checkbox" id="@(m * @ViewBag.BrojRedova + n)" value="@(m * @ViewBag.BrojRedova + n)" name="chk"> @(m * @ViewBag.BrojRedova + n)

                                            </label>
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            <label class="btn btn-primary" id="@(m * @ViewBag.BrojRedova + n)" style="width:80px">
                                                <input type="checkbox" id="@(m * @ViewBag.BrojRedova + n)" value="@(m * @ViewBag.BrojRedova + n)" name="chk">  @(m * @ViewBag.BrojRedova + n)

                                            </label>
                                        </td>
                                    }
                                }

                                else
                                {
                                    <td>
                                        <label class="btn btn-primary" style="width:80px" disabled>
                                            <input type="checkbox" id="@(m * @ViewBag.BrojRedova + n)" value="@(m * @ViewBag.BrojRedova + n)" name="chk"> @(m * @ViewBag.BrojRedova + n)

                                        </label>
                                    </td>
                                }
                            }

                        }
                        <p> </p>
                    </tr>


                }
            </div>
                <p>
                    <input type="submit" name="submitButton" value="Rezerviši" />  <br>

                </p>
                
                </form>


                <fieldset>
                    <legend> Rezervacije </legend>
                    <table>

                        <tr>
                            <th>
                                Korisnik
                            </th>
                            <th>
                                Naziv rezervacije
                            </th>
                            <th>
                                Sjedište
                            </th>
                            <th>
                                Red
                            </th>

                            <th></th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model.Item2)
                        {

                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Gledalac_ID_korisnika)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.naziv_rezervacije)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Sjediste_ID_sjedista)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Sjediste_Red_ID_reda)
                                </td>
                                <td>
                                    @Html.ActionLink("Prodaja", "ProdajaIzvedba", new { id = item.Izvedba_ID_izvedbe, id2 = item.Sjediste_ID_sjedista })
                                </td>
                                <td>
                                    <a id="deleteItem" class="deleteItem" data-target="#basic" data-toggle="modal" data-id="@item.Izvedba_ID_izvedbe" data-id2="@item.Sjediste_ID_sjedista"><font color="F6855E"><strong>Otkaži</strong></font></a>


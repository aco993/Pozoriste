                                    if (!ViewBag.listaNeprodatih.Contains((m * @ViewBag.BrojRedova + n)))
                                    {
                                        <td>
                                            <label class="btn btn-primary" style="width:80px" disabled>
                                                <input type="checkbox" id="@(m * @ViewBag.BrojRedova + n)" value="@(m * @ViewBag.BrojRedova + n)" name="chk"> @(m * @ViewBag.BrojRedova + n)

                                            </label>
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            <label class="btn btn-primary" id="@(m * @ViewBag.BrojRedova + n)" style="width:80px">

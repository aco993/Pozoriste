@model Pozoriste.Models.Izvedba

@{
    ViewBag.Title = "EditIzvedba";
}

<link href="@Url.Content("~/Content/themes/base/minified/jquery-ui.min.css")" rel="stylesheet" />
<!-- Required jQuery and jQuery UI Javascript references -->
<script src="@Url.Content("~/Scripts/jquery-1.12.4.min.js")"></script>
<script src="@Url.Content("~/Scripts/jquery-ui-1.12.1.min.js")"></script>

<br>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Izvedba</h4>
        <hr />
        @Html.ValidationSummary(true)

        @Html.HiddenFor(model=>model.ID_izvedbe)
        @Html.HiddenFor(model => model.Sala_ID_sale)
        @Html.HiddenFor(model => model.Predstava_ID_Predstave)

        <div class="form-group">
            @Html.LabelFor(model => model.Vrijeme_izvodjenja, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Vrijeme_izvodjenja, new { style = "width:200px" })
                @Html.ValidationMessageFor(model => model.Vrijeme_izvodjenja)
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.Repertoar.Datum, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Repertoar.Datum, new { style = "width:200px", @class = "date-picker" })
                @Html.ValidationMessageFor(model => model.Repertoar_Datum)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Sačuvaj" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Vrati se nazad", "Index")
</div>

<script type="text/javascript">
    $(function () {
        // This will make every element with the class "date-picker" into a DatePicker element
        $('.date-picker').datepicker();

    })
</script>

